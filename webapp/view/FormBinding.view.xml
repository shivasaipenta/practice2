<mvc:View controllerName="dev1.controller.FormBinding"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m" xmlns:f="sap.ui.layout.form"  xmlns:core="sap.ui.core">
    <Page id="page1" title="Welcome to simpleform using binding" >
       <content >
        <f:SimpleForm editable="true" layout="ResponsiveGridLayout" title="Employee Data" labelSpanL="4" labelSpanM="4" emptySpanL="4" emptySpanM="4" >
            <f:content>
                <!-- <core:Title text="Basic Information"></core:Title> -->     
                <Label text="Employee Id" required="true"></Label>
                <Input  id="idEmpId" value="{/inp1}"></Input>
                 <Label text="Employee Name" required="true"></Label>
                <Input id="idEmpName" maxLength="20" value="{/inp2}" ></Input>
                <Label text="Employee Designation" required="true"></Label>
                <Input id="idEmpDesg" value="{/inp3}" ></Input>
                 <!-- <core:Title text="Basic Information2"></core:Title> -->
                 <Label text="Employee Skill" required="true"></Label>
                <Input id="idEmpSkill" value="{/inp4}" ></Input>
                <Label text="Employee Email" required="true"></Label>
                <Input id="idEmpEmail" value="{/inp5}"></Input>  
                <Label text="Employee Phone" required="true"></Label>
                <Input id="idEmpPhone" value="{/inp6}"></Input>       
                <Label ></Label>
                <Button id="idBtnSubmit" text="Submit" type="Attention" press="onSubmit"></Button>
              
            </f:content>
        
        </f:SimpleForm>
       </content>

       <footer>
            <Bar>
                <contentRight>
                 <!-- <Button id="idBtnSubmit" text="Submit" type="Attention" press="onSubmit"></Button> -->
                 <Button id="idBtnForm" text="Goto Homepage" type="Back" press="onPress6"></Button>
                </contentRight>
            </Bar>
       </footer>
    </Page>
</mvc:View>
